<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_myplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:hint="내가 지은 식물 이름"
        android:inputType="text"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/et_myplant"
        android:backgroundTint="#6AA65D"
        android:text="add"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_plantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_myplant"
        android:layout_alignLeft="@+id/et_myplant"
        android:text="식물 이름"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/et_myplant"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_plantname"
        android:src="@drawable/ic_baseline_info_24" />





</RelativeLayout>